<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost">What's up?</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>

      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
		<%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1>POST-it - By Patrick Ugwu</h1>

  <p>
    Welcome to the POST-it. Sign up and give it a spin!
    </p>
    <a href="http://railstutorial.org/">Powered by Ruby on Rails Tutorial</a>
       Many thanks to Michael Hartl!
  </p>

  <%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>

